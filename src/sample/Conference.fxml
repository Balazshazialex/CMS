<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.ConferenceController"
            prefHeight="400.0" prefWidth="600.0">
    <HBox>
        <Text fx:id="phase_name"></Text>
    </HBox>
    <GridPane layoutX="10" layoutY="40">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <Label text="Name" />
            <Label text="List of authors" GridPane.rowIndex="1" />
            <Label text="Meta info" GridPane.rowIndex="2" />
            <Label text="Topics" GridPane.rowIndex="3" />
            <Label text="Abstract paper" GridPane.rowIndex="4" />
            <Label text="Keywords" GridPane.rowIndex="5" />
            <TextField fx:id="nameTextField" GridPane.columnIndex="1" />
            <TextField fx:id="lofaut" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextArea fx:id="metaInfo" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="topics" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <TextArea fx:id="abstractpaper" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <TextField fx:id="keywords" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        </children>
    </GridPane>
    <GridPane layoutX="400" layoutY="40">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="350.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0"  vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <Label text="Full paper: " />
            <TextArea fx:id="fullpaper" GridPane.columnIndex="1" />
            <Button fx:id="submit" text="Submit Proposal" GridPane.rowIndex="1" minWidth="250" onAction="#create_proposal"></Button>
            <Button fx:id="update" text="Update Proposal" GridPane.rowIndex="1" minWidth="250" onAction="#update_proposal"></Button>
        </children>
    </GridPane>

</AnchorPane>